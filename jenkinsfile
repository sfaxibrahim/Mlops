pipeline {
    agent any
    
    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'master', url: 'https://github.com/sfaxibrahim/Mlops.git'
            }
        }
        
        stage('Start Services') {
            steps {
                script {
                    bat 'docker-compose up -d'
                }
            }
        }
        
        stage('Teardown Services') {
            steps {
                script {
                    bat 'docker-compose down'
                }
            }
        }
    }
    
    post {
        always {
            script {
                bat 'docker-compose down'
            }
        }
    }
}