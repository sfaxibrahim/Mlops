pipeline {
    agent any
    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'master', url: 'https://github.com/sfaxibrahim/Mlops.git'
            }
        }
        // Other stages
                stage('Start Services') {
            steps {
                script {
                    sh 'docker-compose up -d'
                }
            }
        }

        stage('Teardown Services') {
            steps {
                script {
                    sh 'docker-compose down'
                }
            }
        }
    }


    post {
        always {
            script {
                sh 'docker-compose down'
            }
        }
    }
}
    


